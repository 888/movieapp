<article>

  <h1><% if @query %>
    Search results for <i><%= h @query %></i>
  <% elsif @director %>
    Movies by <%= @director %>
  <% else %>
    All movies
  <% end %></h1>

  <% unless @movies.empty? %>
    <%= render 'paginated', :movies => @movies %>
  <% else %>
    <p>Nothing found. I SO SORRY</p>
  <% end %>

</article>