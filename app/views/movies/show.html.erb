<article class="movie">
  
  <% if @movie.poster_medium_url %>
    <%= image_tag @movie.poster_medium_url %>
  <% end %>

  <header>
    <h1><%= title_for_movie(@movie) %></h1>

    <%= movie_year(@movie) %>

    <% if @movie.directors.present? %>
      <div>by <strong><%= @movie.directors.to_sentence %></strong></div>
    <% end %>
  </header>

  <dl>    
    <% if @movie.countries.present? %>
      <dt>Country:</dt>
      <dd><%= @movie.countries.to_sentence %></dd>
    <% end %>
    
    <% if @movie.runtime %>
      <dt>Runtime:</dt>
      <dd><%= @movie.runtime %> min</dd>
    <% end %>
  </dl>
  
  <% if @movie.homepage.present? %>
    <a href="<%= @movie.homepage %>">Official website</a>
  <% end %>

  <p><%= raw @movie.plot %></p>
  
</article>
