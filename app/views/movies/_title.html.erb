<% if movie.original_title and movie.original_title != movie.title %>
  <hgroup>
    <h1><%= link_to movie.original_title, movie_path(movie.id) %></h1>
    <h2><%= movie_year(movie) %> <%= link_to movie.title, movie_path(movie.id) %></h2>
  </hgroup>

<% else %>
  <h1><%= link_to movie.title, movie_path(movie.id) %></h1>
  <%= movie_year(movie) %>

<% end %>
