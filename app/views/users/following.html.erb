<% @title = "Movies from people you're following" %>
<article>

  <% if not @movies.empty? %>
    <header>    
      <h1>People you're following watched <%= count @movies %>.</h1>
      <p><%= raw current_user.friends.map { |friend| link_to friend.name, watched_path(friend) }.join ', ' %></p>
    </header>
    
    <%= render 'movies/paginated', :movies => @movies %>
  <% else %>
    <h1>No movies found.</h1>
    <p class="intro">
      When someone of your Twitter or Facebook connections uses this site, movies they watched will be listed here.
    </p>
  <% end %>

</article>
